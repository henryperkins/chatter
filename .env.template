# Database Configuration
DATABASE_URI=sqlite:///chat_app.db  # Database connection string

# Database Pool Settings
DB_POOL_SIZE=5  # Number of connections to keep in pool
DB_MAX_OVERFLOW=10  # Maximum number of connections to create beyond pool size
DB_POOL_TIMEOUT=60  # Seconds to wait for available connection
DB_POOL_RECYCLE=3600  # Seconds before connections are recycled

# Security
SECRET_KEY=your-secret-key-here  # Flask session secret key (required)
ENCRYPTION_KEY=your-encryption-key-here  # Key for encrypting sensitive data (required, must be valid Fernet key)
BCRYPT_COST_FACTOR=12  # Cost factor for password hashing (default: 12)

# Azure OpenAI Configuration
AZURE_OPENAI_KEY=your-azure-openai-key  # Azure OpenAI API key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com  # Azure OpenAI endpoint
AZURE_OPENAI_API_VERSION=2024-12-01-preview  # Azure OpenAI API version
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name  # Azure OpenAI deployment name

# Default Model Settings
# Note: These override the model-specific settings if no model is specified
DEFAULT_MODEL_NAME=o1-preview  # Default model name
DEFAULT_MODEL_DESCRIPTION="Azure OpenAI o1-preview model"  # Default model description
DEFAULT_MODEL_TYPE=o1-preview  # Default model type
DEFAULT_TEMPERATURE=1.0  # Default temperature for model responses
DEFAULT_MAX_COMPLETION_TOKENS=8300  # Default maximum completion tokens

# Email Configuration
EMAIL_SENDER=no-reply@example.com  # Sender email address
SMTP_SERVER=smtp.example.com  # SMTP server hostname
SMTP_PORT=587  # SMTP server port
SMTP_USERNAME=your-smtp-username  # SMTP authentication username
SMTP_PASSWORD=your-smtp-password  # SMTP authentication password
APP_URL=http://localhost:5000  # Application URL for email links

# File Upload Settings
UPLOAD_FOLDER=uploads  # Upload directory path
MAX_FILE_SIZE=10485760  # Maximum file size in bytes (default: 10MB)
MAX_TOTAL_FILE_SIZE=52428800  # Maximum total file size in bytes (default: 50MB)
MAX_FILE_CONTENT_LENGTH=8000  # Maximum content length in characters
ALLOWED_FILE_TYPES=text/plain,application/pdf,image/jpeg,image/png  # Allowed file types
MAX_FILES=5  # Maximum number of files per upload

# Token and Message Limits
MAX_MESSAGES=20  # Maximum number of messages to keep in conversation
MAX_TOKENS=32000  # Maximum total tokens allowed
MAX_MESSAGE_TOKENS=32000  # Maximum tokens per message
MAX_MESSAGE_LENGTH=1000  # Maximum message length in characters
MAX_INPUT_TOKENS=8192  # Maximum input tokens
MAX_CONTEXT_TOKENS=128000  # Maximum context tokens

# Rate Limiting
REDIS_URL=redis://localhost:6379  # Redis URL for rate limiting (optional)
SCRAPE_RATE_LIMIT="5 per minute"  # Rate limit for web scraping
CHAT_RATE_LIMIT="60 per minute"  # Rate limit for chat requests

# Logging Configuration
LOG_LEVEL=WARNING  # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_DIR=logs  # Directory for log files
LOG_FORMAT=json  # Log format (json or standard)
LOG_MAX_BYTES=20971520  # Maximum size of log files (20MB)
LOG_BACKUP_COUNT=10  # Number of backup log files to keep

# Application Settings
FLASK_ENV=development  # Flask environment (development/production)
PORT=5000  # Application port

# Gunicorn Settings (Production Only)
WORKERS=4  # Number of Gunicorn workers
TIMEOUT=120  # Gunicorn timeout in seconds
KEEPALIVE=5  # Gunicorn keepalive in seconds
MAX_REQUESTS=1000  # Maximum requests per worker
MAX_REQUESTS_JITTER=50  # Jitter in max requests
GRACEFUL_TIMEOUT=30  # Graceful timeout in seconds

# Virus Scanning Settings (Optional)
CLAMD_SOCKET=/var/run/clamav/clamd.ctl  # ClamAV socket path
SCAN_TIMEOUT=30  # Timeout for virus scanning in seconds
QUARANTINE_FOLDER=uploads/quarantine  # Path for quarantined files